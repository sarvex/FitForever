<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/ailment_card_view"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:layout_margin="3dp"
  card_view:cardCornerRadius="3dp"
  card_view:cardElevation="6dp">



  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_gradient"
    android:weightSum="1">
  <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_weight="0.2">


    <TextView
      android:id="@+id/questions_txt"
      android:layout_alignParentTop="true"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textColor="#309F3F"
      android:textSize="12sp"
      tools:text="Questions Text"/>

    <TextView
      android:id="@+id/answers"
      android:layout_marginTop="3dp"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textColor="#309F3F"
      tools:text="x Answers"
      android:textSize="12sp"/>

    <TextView
      android:id="@+id/top_answers"
      android:layout_marginTop="3dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textColor="#309F3F"
      tools:text="Top Answers Text"
      android:textSize="12sp"/>

    <TextView
      android:id="@+id/written_by"
      android:layout_below="@id/treats"
      android:layout_marginTop="3dp"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:textColor="#309F3F"
      tools:text="Written By"
      android:textSize="12sp"/>
  </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="0.8">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text=">>more"/>
    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>